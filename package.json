{
  "name": "tubulin-structure-viewer",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "nightingale/packages/*"
  ],
  "scripts": {
    "codegen": "npx @rtk-query/codegen-openapi openapi-config.ts",
    "postinstall": "cd nightingale && yarn install && yarn build",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "render": "tsx scripts/bulk-render.ts",
    "render:list": "tsx scripts/bulk-render.ts --list",
    "setup": "yarn install && cd nightingale && yarn install && yarn build && cd ..",
    "clean": "rm -rf node_modules .next && cd nightingale && yarn clean && cd ..",
"rebuild-ngl": "cd nightingale && yarn lerna run build --skip-nx-cache && cd .. && rm -rf .next && yarn install --force"
  },
  "dependencies": {
    "@nightingale-elements/nightingale-manager"   : "file:./nightingale/packages/nightingale-manager",
    "@nightingale-elements/nightingale-msa"       : "file:./nightingale/packages/nightingale-msa",
    "@nightingale-elements/nightingale-navigation": "file:./nightingale/packages/nightingale-navigation",
    "@nightingale-elements/nightingale-sequence"  : "file:./nightingale/packages/nightingale-sequence",
    "@nightingale-elements/nightingale-track"     : "file:./nightingale/packages/nightingale-track",
    "@radix-ui/react-collapsible"                 : "^1.1.12",
    "@radix-ui/react-slot"                        : "^1.2.4",
    "@reduxjs/toolkit"                            : "^2.11.0",
    "@types/node"                                 : "^24.10.1",
    "@types/react"                                : "^18.2.0",
    "@types/react-dom"                            : "^18.2.0",
    "antd"                                        : "^6.0.0",
    "class-variance-authority"                    : "^0.7.1",
    "clsx"                                        : "^2.1.1",
    "lucide-react"                                : "^0.525.0",
    "molstar"                                     : "^5.6.0",
    "next"                                        : "15.1.9",
    "react"                                       : "^18.2.0",
    "react-beautiful-dnd"                         : "^13.1.1",
    "react-dom"                                   : "^18.2.0",
    "react-redux"                                 : "^9.2.0",
    "react-resizable-panels"                      : "^3.0.6",
    "react-select"                                : "^5.10.2",
    "sass"                                        : "^1.89.2",
    "seqviz"                                      : "^3.10.9",
    "tailwind-merge"                              : "^3.4.0",
    "tailwindcss-animate"                         : "^1.0.7",
    "ts-node"                                     : "^10.9.2",
    "tsx"                                         : "^4.20.6",
    "typescript"                                  : "^5.0.0"
  },
  "devDependencies": {
    "@rtk-query/codegen-openapi": "^2.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "gl": "^8.1.6",
    "jpeg-js": "^0.4.4",
    "pngjs": "^7.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0"
  }
}
